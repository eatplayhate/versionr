<UserControl x:Class="VersionrUI.Controls.VersionrPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:VersionrUI.ViewModels"
             xmlns:controls="clr-namespace:VersionrUI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.Resources>

        <DataTemplate DataType="{x:Type vm:AreaVM}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0"
                            Orientation="Vertical">
                    <TextBlock Text="Branches" />
                    <TreeView Name="treeView" ItemsSource="{Binding Children}">
                        <TreeView.Resources>
                            <HierarchicalDataTemplate DataType="{x:Type vm:NamedCollection}" ItemsSource="{Binding Items}">
                                <TextBlock Text="{Binding Name}" />
                            </HierarchicalDataTemplate>
                            <DataTemplate DataType="{x:Type vm:BranchVM}">
                                <TextBlock Text="{Binding Name}" />
                            </DataTemplate>
                            <DataTemplate DataType="{x:Type vm:StatusVM}">
                                <TextBlock Text="Status" />
                            </DataTemplate>
                        </TreeView.Resources>
                        <TreeView.ItemContainerStyle>
                            <Style TargetType="{x:Type TreeViewItem}">
                                <Setter Property="IsExpanded" Value="True"/>
                            </Style>
                        </TreeView.ItemContainerStyle>
                    </TreeView>
                </StackPanel>
                <GridSplitter Grid.Column="1"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Stretch"
                              Background="Black"
                              ShowsPreview="True"
                              Width="5"
                              Margin="2,0" />
                <ContentPresenter Grid.Column="2" Content="{Binding SelectedItem, Source={x:Reference treeView}}" />
            </Grid>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type vm:BranchVM}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <DataGrid Grid.Row="0"
                          Name="dataGrid"
                          ItemsSource="{Binding History}"
                          SelectionMode="Single"
                          AutoGenerateColumns="False" >
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Revision" Binding="{Binding Revision, Mode=OneWay}" />
                        <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp, Mode=OneWay}" />
                        <DataGridTextColumn Header="Message"  Binding="{Binding Message, Mode=OneWay}"/>
                        <DataGridTextColumn Header="Author" Binding="{Binding Author, Mode=OneWay}" />
                    </DataGrid.Columns>
                </DataGrid>
                <GridSplitter Grid.Row="1"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Center"
                              Background="Black" 
                              ShowsPreview="True"
                              Height="5"
                              Margin="0,2" />
                <ContentPresenter Grid.Row="2" Content="{Binding SelectedItem, Source={x:Reference dataGrid}}" />
            </Grid>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:VersionVM}">
            <TextBlock Text="// TODO: VersionVM DataTemplate" />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:StatusVM}">
            <DataGrid Grid.Row="0"
                      ItemsSource="{Binding Elements}"
                      SelectionMode="Single"
                      AutoGenerateColumns="False" >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Code" Binding="{Binding Code, Mode=OneWay}" />
                    <DataGridCheckBoxColumn Header="Staged"  Binding="{Binding Staged, Mode=OneWay}"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name, Mode=OneWay}" />
                    <DataGridCheckBoxColumn Header="IsDirectory" Binding="{Binding IsDirectory, Mode=OneWay}" />
                </DataGrid.Columns>
            </DataGrid>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:NamedCollection}">
        </DataTemplate>
        
    </UserControl.Resources>
    
    <Grid x:Name="mainGrid">
        <DockPanel>
            <!-- Menu bar -->
            <StackPanel DockPanel.Dock="Top"
                        Orientation="Horizontal">
                <Button Content="Clone/New" Command="{Binding NewAreaCommand}" />
            </StackPanel>
            
            <!-- Area tabs -->
            <TabControl ItemsSource="{Binding OpenAreas}"
                        SelectedItem="{Binding SelectedArea}">
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </TabControl.ItemTemplate>
                <TabControl.ContentTemplate>
                    <DataTemplate>
                        <ContentPresenter Content="{Binding}" />
                    </DataTemplate>
                </TabControl.ContentTemplate>
            </TabControl>
        </DockPanel>
    </Grid>
    
</UserControl>
